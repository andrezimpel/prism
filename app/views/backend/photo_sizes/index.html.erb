<div class="page-header">
  <h1>Photo Sizes</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @photo_sizes.each do |photo_size| %>
      <tr>
        <td><%= photo_size.title %></td>
        <td class="text-right"><%= link_to 'Edit', edit_photo_size_path(photo_size) %></td>
        <td class="text-right"><%= link_to 'Destroy', photo_size, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% content_for "sidebar" do %>
  <%= link_to 'Add Size', new_photo_size_path, class: "btn btn-primary" %>
  <hr>
  <%= render "backend/accounts/sidebar_nav" %>
<% end %>
