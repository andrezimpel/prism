<%= simple_form_for(@photo_size) do |f| %>
  <%= f.error_notification %>
  <%= f.hidden_field :account_id, value: @current_account.id %>

  <div class="form-inputs">
    <%= f.input :title %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save" %>
    <%= link_to 'Cancel', photo_sizes_path, class: "btn btn-danger btn-link" %>
  </div>
<% end %>



<% content_for "sidebar" do %>
  <%= link_to 'Add Size', new_photo_size_path, class: "btn btn-primary" %>
  <hr>
  <%= render "backend/accounts/sidebar_nav" %>
<% end %>
