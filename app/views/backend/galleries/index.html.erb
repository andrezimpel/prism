<div class="page-header">
  <h1>Galleries</h1>
</div>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Photos</th>
      <th>Client</th>
      <th>updated</th>
    </tr>
  </thead>

  <tbody>
    <% @galleries.each do |gallery| %>
      <tr>
        <td><b><%= link_to gallery.title, backend_gallery_photos_path(gallery) %></b></td>
        <td><%= gallery.photos.count %></td>
        <td><%= gallery.client.fullname if gallery.client %></td>
        <td><span data-livestamp="<%= gallery.updated_at.to_i %>"></span></td>
      </tr>
    <% end %>
  </tbody>
</table>


<% content_for "sidebar" do %>
  <%= link_to 'Add Gallery', new_backend_gallery_path, class: "btn btn-primary" %>
<% end %>
