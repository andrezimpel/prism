<%= simple_form_for(@gallery, url: galleries_path) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%#= f.select :client_id, Profile.all.collect { |c| [c.user.fullname, c.id] } %>
    <%= f.hidden_field :account_id, value: @current_account.id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save" %>
    <%= link_to 'Cancel', galleries_path, class: "btn btn-danger btn-link" %>
  </div>
<% end %>
