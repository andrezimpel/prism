<div class="page-header">
  <h1><%= @title %></h1>
</div>



<div class="row">
  <% @galleries.each do |gallery| %>
    <div class="col-sm-6 col-md-4">
      <a class="thumbnail text-center" href="<%= portfolio_photos_path(gallery) %>">
        <img src="<%= gallery.photos.first.image(:medium_s) %>">
        <div class="caption">
          <b><%= gallery.title %></b>
        </div>
      </a>
    </div>
  <% end %>
</div>
