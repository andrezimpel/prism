<div class="page-header">
  <h1>My Orders</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>State</th>
      <th>Amount</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><span class="label label-default"><%= order.state %></span></td>
        <td><%= number_to_currency((order.amount / 100), locale: :de, :unit=>'â‚¬ ') %></td>
        <td><%= link_to 'Cancel', shop_order_path(order), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
