<div class="page-header">
  <h1>Order <small>#<%= @order.id %></small></h1>
</div>


<table class="table table-striped table-condensed">
  <tbody>
    <% @order_items.each do |cart_item| %>
      <%= render "clients/shopping_cart_items/list_small_tr", item: cart_item %>
    <% end %>
    <tr>
      <td>
        <b>Total:</b>
      </td>
      <td>
        <b><%= number_to_currency(@cart.total, locale: :de, :unit=>'â‚¬ ') %></b>
      </td>
      <td colspan="2"></td>
    </tr>
  </tbody>
</table>



<% content_for "sidebar" do %>
  <%= link_to 'Cancel', shop_order_path(@order), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-block" %>
  <hr>
  <div class="sidebar-note">
    The order is <span class="label label-default"><%= @order.state %></span>
  </div>
<% end %>
