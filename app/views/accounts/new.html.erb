<% content_for "headline" do %>
  <h2>Sign up to PRIISM</h2>
<% end %>

<%= simple_form_for(@account, url: "/accounts", method: "POST") do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, label: false, placeholder: "Account Title", autofocus: true %>
    <%= f.input :subdomain, label: false, placeholder: "Subdomain" %>

    <%= f.fields_for :users do |u| %>
      <%= u.input :firstname, required: true, label: false, placeholder: "Firstname" %>
      <%= u.input :lastname, required: true, label: false, placeholder: "Lastname" %>
      <%= u.input :email, required: true, label: false, placeholder: "Email" %>
      <%= u.input :password, required: true, label: false, placeholder: "Password" %>
      <%= u.input :password_confirmation, required: true, label: false, placeholder: "Password confirmation" %>
    <% end %>
    <br/>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary btn-lg" %>
  </div>
<% end %>
